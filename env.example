# ========================================
# CAPSTONE FIVERR API ENVIRONMENT VARIABLES
# ========================================

# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=mysql://root:password@localhost:3306/capstone_fiverr
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-2024
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-2024
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=10
CORS_ORIGIN=*
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=900000

# Pagination Configuration
DEFAULT_PAGE=1
DEFAULT_SIZE=10
MAX_SIZE=100

# Rating Configuration
MIN_RATING=1
MAX_RATING=5

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_PATH=uploads

# API Configuration
API_PREFIX=api
API_VERSION=v1
SWAGGER_PATH=api-docs
SWAGGER_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_TIMESTAMP=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX=100

# ========================================
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Update the values according to your environment
# 3. Never commit .env file to version control
# 4. Required variables: DATABASE_URL, JWT_SECRET
# ========================================
