# ========================================
# CAPSTONE API FIVERR - ENVIRONMENT VARIABLES
# ========================================

# Database Configuration
DATABASE_PASSWORD=your-secure-password-here
DATABASE_NAME=capstone_fiverr
DATABASE_USER=root
DATABASE_HOST=mysql
DATABASE_PORT=3306

# JWT Configuration
ACCESS_TOKEN_SECRET=your-super-secret-access-token-key-2024-capstone-fiverr-api
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-2024-capstone-fiverr-api
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# Docker Registry Configuration
REGISTRY=ghcr.io
IMAGE_NAME=your-username/capstone-api-fiverr
IMAGE_TAG=latest

# Application Configuration
NODE_ENV=production
PORT=3000
API_PREFIX=/api
CORS_ORIGIN=*

# Security Configuration
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
BCRYPT_ROUNDS=12

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

